
<div class="panel panel-default">
  <div class="panel-body">
    <%= form_for @last_fm, method: :get do |f| %>
		<div class="input-group">
			<%= f.text_field :query, class: "form-control", placeholder:"Search Last.FM for your favorite artist..." %>
			<span class="input-group-btn">
				<%= f.submit "Search", class: "btn btn-primary" %>
			</span>
		</div>
	<% end %>	
	<hr/>

	<!-- Search results -->

	<% unless @last_fm.results.nil? %>
		<table class="table table-striped table-bordered table-hover">
			<thead>
		        <tr>
		        	<th>Artist</th>
		            <th>Listeners</th>
		            <th>Vote!</th>
		        </tr>
		    </thead>
			<tbody>		
				<% @last_fm.results.each do |result| %>
					<%= render 'result', result: result %>
				<% end %>
			
			</tbody>
		</table>
	<% end %>
  </div>
</div>
	

