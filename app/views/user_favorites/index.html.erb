<h1>User Favorites</h1>

<div class="col-12">
	<%= simple_form_for :last_fm do |f| %>
    <div class="input-group">
      <input type="text" class="form-control" placeholder="Search for artist...">
      <span class="input-group-btn">
        <%= f.submit "Search", class: "btn btn-primary" %>
      </span>
    </div>
	<% end %>
</div>

<div class="col-12">
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>User</th>
				<th>Artist ID</th>
			</tr>
		</thead>
		<tbody>
			<% @user_favorites.each do |user_favorite| %>
				<tr>
					<td><%= user_favorite.user_id %></td>
					<td><%= user_favorite.artist_id %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>